# =====================================================
# Substation Logbook - Environment Configuration
# =====================================================

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=Sesi@143
DB_NAME=substation_logbook
DB_PORT=3306
DB_CONNECTION_LIMIT=10

# JWT Secret (Change this to a random secure string!)
JWT_SECRET=change_this_to_a_very_secure_random_string_min_32_chars
JWT_EXPIRES_IN=24h

# Session Secret (Change this to a random secure string!)
SESSION_SECRET=change_this_to_another_secure_random_string

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=90
BACKUP_SCHEDULE=0 2 * * *

# Email Configuration (Gmail SMTP - Default)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Substation Logbook

# Timezone
TZ=Asia/Kolkata

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Application URL (for email links)
APP_URL=http://localhost:3000

# Log Level
LOG_LEVEL=info
